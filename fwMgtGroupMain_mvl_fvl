        <script>

        $(document).ready(function () {

            // 신규등록 버튼
            $('#detailPreview').click(function(){
                window.location.href = 'fwMgtGroupDetail_mvd.jsp'
            })

            // 신규등록 버튼
            $('#addGroupBtn').click(function(){
                window.location.href = 'fwMgtGroupReg_min.jsp'
            })

            // 수정버튼 
            $('#editGroupBtn').click(function(){
                // table row 전체를 파라미터로 전송
                // 상세 페이지에서 기본정보는 넘겨받은 값들로 채우고, 그룹 내 아이템리스트들은 
                // onload시에 그룹id로 조회하는 로직 필요
                const rowData = ''
                window.location.href = `fwMgtGroupEdit_min.jsp?rowData=\${rowData}`;
            })



 })
            

        </script>

